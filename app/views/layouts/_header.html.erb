<header>
    <div style="position: absolute; top: 25px; left: 5px;">
        <%= render partial: "layouts/search_bar", layout: "layouts/search_bar" %>
    </div>
    
    <% if user_signed_in? %>
        <%= link_to destroy_user_session_path, method: :delete do %>
            <div class="button-container-2" style="position: absolute; top: 0px; right: 0px;">
                <span class="mas">LOG OUT</span>
                <button type="button" name="Hover">LOG OUT</button>
            </div>
        <% end %>
        <%= link_to edit_user_registration_path, :action => 'go' do %>
            <div style="position: absolute; top: 0px; right: 100px;">
                <%= image_tag ("anon.jpg"),  size: "50x50"%>  
            </div>
        <% end %>
    <% else %>
        <%= link_to new_user_session_path, :action => 'go' do %>
            <div class="button-container-2" style="position: absolute; top: 0px; right: 0px;">
                <span class="mas">LOGIN</span>
                <button type="button" name="Hover">LOGIN</button>
            </div>
        <% end %>
        <%= link_to new_user_registration_path, :action => 'go' do %>
            <div class="button-container-1" style="position: absolute; top: 0px; right: 100px;">
                <span class="mas">SIGN UP</span>
                <button type="button" name="Hover">SIGN UP</button>
            </div>
        <% end %>     
    <% end %>
</header>