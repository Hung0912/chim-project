<div id="colorlib-page-top-padding">
  <div id="colorlib-main">
    <div class="colorlib-blog">
      <div class="colorlib-narrow-content">
        <div class="row">
          <div class="col-md-6 col-md-offset-3 col-md-pull-3 animate-box" data-animate-effect="fadeInLeft">

			<div class="container">
				<h1>Profile for <%= @user.user_name %></h1>
			  <div class="row">
			    <div class="col-md-6 img">
			      <%= avatar_for(@user) %><br>
			    </div>
			    <div class="col-md-6 details">
			      <blockquote>
			        <h1>
			        	<%= @user.user_name %>
			        </h1>
			        <small><cite title="Description"> <%= @user.description %> </cite></small>
			      </blockquote>
			      <p>
					<div class="col-md-6">
						<label>User ID</label>
					</div>
					<div class="col-md-6">
						<p><%= @user.user_name %></p>
					</div>
			        <div class="col-md-6">
						<label>Email</label>
					</div>
					<div class="col-md-6">
						<p><%= @user.email %></p>
					</div>
			       	<div class="col-md-6">
						<label>Phone</label>
					</div>
					<div class="col-md-6">
						<p><%= @user.phone %></p>
					</div>
			        <div class="col-md-6">
						<label>Sex</label>
					</div>
					<div class="col-md-6">
						<p><%= @user.sex %></p>
					</div>
			        <div class="col-md-6">
						<label>Birthdate</label>
					</div>
					<div class="col-md-6">
						<p><%= @user.birthdate %></p>
					</div>
					<br>
					<%= link_to "Edit Profile", edit_user_path(@user), {class: "btn btn-primary" } %>
			      </p>
			    </div>
			  </div>
			</div>
		</div>
	</div>
</div>
