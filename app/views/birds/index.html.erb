
<div id="colorlib-page-top-padding">
  <div id="colorlib-main">
    <div class="colorlib-blog">
      <div class="colorlib-narrow-content">

        <div class="row">
          <div class="col-md-6 col-md-offset-3 col-md-pull-3 animate-box" data-animate-effect="fadeInLeft">
            <span class="heading-meta">Birds</span>
            <h2 class="colorlib-heading">All birds</h2>

          </div>
        </div>

        <% if @birds.present? %>
          <div class="animate-box" data-animate-effect="fadeInLeft">
            <h2 class="heading-results">
              <%= @birds.total_count %> result(s)
              <% if params[:search] %>
                with term "<%= params[:search] %>"
              <% end %>
            </h2>
          </div>
          <%= render partial: "birds/bird_index", layout: "birds/bird_index" %>
        <% else %>
          <div class="col-md-9 animate-box" data-animate-effect="fadeInLeft">
            <p class="heading-results">There are no birds containing the term "<%= params[:search] %>". Try another keywords.</p>
          </div>
        <% end %>
        <!-- render partial: "birds/bird_index", layout: "birds/bird_index" -->
      </div>
    </div>
  </div>
</div>
