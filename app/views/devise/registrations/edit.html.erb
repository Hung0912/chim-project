<html>
  <%= render partial: "layouts/header" %>
  <body class="bg-success">
    <div class="text-center">
      <h2>Edit <%= resource_name.to_s.humanize %></h2>
    </div>
    <div id="colorlib-page">
    	<%= render partial: "layouts/sidenav" %>
      <div class="col-md-6 col-md-offset-3">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>

            <%= f.label :user_name, class: "col-sm-4" %><i>(please fill in new user name)</i><br />
            <%= f.text_field :user_name, autocomplete: "user name", class: "col-xs-8" %>

            <%= f.label :email, class: "col-sm-4" %><i>(please fill in new email)</i><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-xs-8" %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <%= f.label :phone, class: "col-sm-4" %><i>(please fill in new phone number)</i><br />
            <%= f.text_field :phone, autocomplete: "phone number", class: "col-xs-8" %>

          <div class="form-group">
            <%= f.label :sex, class: "col-sm-4" %><i>(please select your sex)</i><br />
            <%= f.select :sex, ['Male', 'Female', 'Other'] %>
          </div>

          <%= f.label :birthdate, class: "col-sm-4" %><i>(please select your date of birth)</i><br />
          <%= f.date_select(:birthdate, :order => [:month, :day, :year], :start_year => Date.today.year - 100, :end_year => Date.today.year) %>

          <br>
          <br>
          <div class="btn-sm, col-md-offset-6">
            <%= f.submit "Update" %>
          </div>
        <% end %>
      </div>
    </div>
    <!--
    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    <%= link_to "Back", :back %>
    -->
  </body>
</html>
